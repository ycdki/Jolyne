    <script type="module">
        import * as THREE from 'three';
        import { EffectComposer } from 'three/addons/postprocessing/EffectComposer.js';
        import { RenderPass } from 'three/addons/postprocessing/RenderPass.js';
        import { UnrealBloomPass } from 'three/addons/postprocessing/UnrealBloomPass.js';
        import { RoomEnvironment } from 'three/addons/environments/RoomEnvironment.js'; 

        // ==========================================
        // üéÑ Êï∞ÊçÆÈÖçÁΩÆÂå∫ üéÑ
        // ==========================================
        
        const FRIEND_PHOTOS = [
            "https://images.unsplash.com/photo-1543589077-47d81606c1bf?w=500&q=80", 
            "https://images.unsplash.com/photo-1511268011861-691ed9340eab?w=500&q=80",
            "https://images.unsplash.com/photo-1543002588-bfa74002ed7e?w=500&q=80"
        ];

        const POEMS = [
            {
                title: "Silent Night",
                lines: "Silent night, holy night\nAll is calm, all is bright\nRound yon Virgin, Mother and Child"
            },
            {
                title: "Wishes",
                lines: "May the lights of Christmas\nguide you to success\nand prosperity."
            },
            {
                title: "Âπ≥ÂÆâÂ§ú",
                lines: "ÈíüÂ£∞Êï≤ÂìçÁöÑÊó∂Âàª\nÊòüÂÖâÊ¥íËêΩËÇ©Â§¥\nÊÑøÊ∏©Êöñ‰∏éÁà±\nÂ∏∏‰º¥‰Ω†Â∑¶Âè≥"
            }
        ];
        
        const CONFIG = {
            colors: {
                bg: 0x000000, 
                // ÁªèÂÖ∏È¶ôÊßüÈáë
                gold: 0xffd700,
                warmGold: 0xffaa33,
                // ‰∫ÆÁ∫¢Ëâ≤Êîπ‰∏∫ÊöñÁ∫¢
                warmRed: 0xff3300,
                // ÊöñÂÖâ
                warmLight: 0xffddaa  
            },
            particles: {
                count: 1400,
                treeHeight: 24,  
                treeRadius: 8.5    
            }
        };

        const STATE = {
            mode: 'TREE', 
            viewTarget: null, 
            rotation: { x: 0, y: 0 },
            targetRotation: { x: 0, y: 0 },
            isDragging: false,
            lastTouch: { x: 0, y: 0 },
            touchStartTime: 0
        };

        let scene, camera, renderer, composer;
        let mainGroup, snowGroup; 
        let clock = new THREE.Clock();
        let particleSystem = []; 
        let interactableObjects = []; 
        let raycaster = new THREE.Raycaster();
        let mouse = new THREE.Vector2();
        let audioCtx;

        async function init() {
            initThree();
            setupEnvironment(); 
            createParticles(); 
            createSnow();     
            
            loadPreloadedPhotos();
            loadPoems();

            setupPostProcessing();
            setupInteractions(); 
            
            animate();
        }

        const startOverlay = document.getElementById('start-overlay');
        startOverlay.addEventListener('click', async () => {
            const bgm = document.getElementById('bgm');
            bgm.volume = 0.5; 
            try { bgm.play(); } catch(e) {}
            initAudio(); 

            startOverlay.style.opacity = 0;
            setTimeout(() => startOverlay.remove(), 1200);

            STATE.targetRotation.y = Math.PI * 2.5; 
        });

        function initThree() {
            const container = document.getElementById('canvas-container');
            scene = new THREE.Scene();

            camera = new THREE.PerspectiveCamera(45, window.innerWidth / window.innerHeight, 0.1, 1000);
            const dist = window.innerWidth < 600 ? 50 : 40;
            camera.position.set(0, 0, dist); 

            renderer = new THREE.WebGLRenderer({ antialias: true, alpha: true, powerPreference: "high-performance" });
            renderer.setSize(window.innerWidth, window.innerHeight);
            renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
            renderer.toneMapping = THREE.ACESFilmicToneMapping; 
            renderer.toneMappingExposure = 1.1; // Á®çÂæÆË∞É‰∫ÆÊõùÂÖâ
            container.appendChild(renderer.domElement);

            mainGroup = new THREE.Group();
            scene.add(mainGroup);
            
            snowGroup = new THREE.Group();
            scene.add(snowGroup);
        }

        function setupEnvironment() {
            const pmremGenerator = new THREE.PMREMGenerator(renderer);
            scene.environment = pmremGenerator.fromScene(new RoomEnvironment(), 0.04).texture; 

            // 1. ‰∏ªËÅöÂÖâÁÅØ (ÊöñÈáë)
            const spotLight = new THREE.SpotLight(0xffaa00, 80);
            spotLight.position.set(10, 30, 20);
            spotLight.angle = 0.6;
            spotLight.penumbra = 0.5;
            scene.add(spotLight);
            
            // 2. Ë°•ÂÖâÁÅØ (ÊöñÊ©ô) - Ê∂àÈô§Èò¥ÂΩ±Ê≠ªÈªë
            const fillLight = new THREE.PointLight(0xff6600, 5, 50);
            fillLight.position.set(-15, 5, 10);
            scene.add(fillLight);

            // 3. Â∫ïÈÉ®‰∏äÁÖßÂÖâ (ÊüîÂíåÊöñÁôΩ)
            const bottomLight = new THREE.DirectionalLight(0xffeebb, 1.0);
            bottomLight.position.set(0, -10, 10);
            scene.add(bottomLight);

            // 4. ÁéØÂ¢ÉÂÖâ (Êï¥‰ΩìÊèê‰∫Æ)
            const ambient = new THREE.AmbientLight(0xffccaa, 0.3); 
            scene.add(ambient);
        }

        function setupPostProcessing() {
            const renderScene = new RenderPass(scene, camera);
            
            const bloomPass = new UnrealBloomPass(new THREE.Vector2(window.innerWidth, window.innerHeight), 1.5, 0.4, 0.85);
            bloomPass.threshold = 0.8; // Á®çÂæÆÈôç‰ΩéÈòàÂÄºÔºåËÆ©Êõ¥Â§öÊöñÂÖâ‰∫ßÁîüÂÖâÊôï
            bloomPass.strength = 0.7;  // Â¢ûÂº∫ÂÖâÊôïÔºåËê•ÈÄ†Ê∏©ÊöñÊú¶ËÉßÊÑü
            bloomPass.radius = 0.5;     

            composer = new EffectComposer(renderer);
            composer.addPass(renderScene);
            composer.addPass(bloomPass);
        }

        class Particle {
            constructor(mesh, type) {
                this.mesh = mesh;
                this.type = type; 
                this.posTree = new THREE.Vector3();
                this.posScatter = new THREE.Vector3();
                this.baseScale = mesh.scale.x; 
                this.originalRotation = mesh.rotation.clone();

                // ÂáèÊÖ¢Èó™ÁÉÅÈÄüÂ∫¶ (1.0 - 2.0 -> 0.5 - 1.5)
                this.twinkleSpeed = Math.random() * 1.0 + 0.5;
                this.twinklePhase = Math.random() * Math.PI * 2;
                
                if (mesh.material) {
                    this.baseEmissive = mesh.material.emissive ? mesh.material.emissive.clone() : new THREE.Color(0,0,0);
                    this.emissiveIntensityMax = mesh.material.emissiveIntensity || 0;
                } else {
                    this.baseEmissive = new THREE.Color(0,0,0);
                    this.emissiveIntensityMax = 0;
                }

                this.calculatePositions();
            }

            calculatePositions() {
                const h = CONFIG.particles.treeHeight;
                const halfH = h / 2;
                let t = Math.random(); 
                t = Math.pow(t, 0.85); 
                const y = (t * h) - halfH;
                let rMax = CONFIG.particles.treeRadius * (1.0 - t); 
                if (rMax < 0.2) rMax = 0.2;
                const angle = t * 45 * Math.PI + Math.random() * Math.PI * 2; 
                const r = rMax * (0.8 + Math.random() * 0.4); 
                this.posTree.set(Math.cos(angle) * r, y, Math.sin(angle) * r);

                let rScatter = 10 + Math.random() * 20;
                const theta = Math.random() * Math.PI * 2;
                const phi = Math.acos(2 * Math.random() - 1);
                this.posScatter.set(
                    rScatter * Math.sin(phi) * Math.cos(theta),
                    rScatter * Math.sin(phi) * Math.sin(theta),
                    rScatter * Math.cos(phi)
                );
            }

            update(dt, mode, viewTarget, time) {
                let targetPos = new THREE.Vector3();
                let targetScale = this.baseScale;

                if (mode === 'VIEW' && this.mesh === viewTarget) {
                    return; 
                }

                if (mode === 'VIEW') {
                    targetPos.copy(this.posTree).multiplyScalar(1.2);
                    targetScale = this.baseScale * 0.5;
                } else if (mode === 'TREE') {
                    targetPos.copy(this.posTree);
                    targetPos.y += Math.sin(time * 0.5 + this.mesh.id) * 0.08;
                } else {
                    targetPos.copy(this.posScatter);
                }

                this.mesh.position.lerp(targetPos, 2.5 * dt);
                this.mesh.scale.setScalar(THREE.MathUtils.lerp(this.mesh.scale.x, targetScale, 4 * dt));

                if (this.type === 'CRYSTAL' || mode === 'SCATTER') {
                    // ÂáèÊÖ¢Ëá™ËΩ¨ÈÄüÂ∫¶ (0.5 -> 0.2)
                    this.mesh.rotation.x += dt * 0.2;
                    this.mesh.rotation.y += dt * 0.3;
                } else if (mode === 'TREE') {
                    if (this.type === 'PHOTO' || this.type === 'POEM') {
                        const angle = Math.atan2(this.mesh.position.x, this.mesh.position.z);
                        const q = new THREE.Quaternion().setFromAxisAngle(new THREE.Vector3(0,1,0), angle);
                        this.mesh.quaternion.slerp(q, 5 * dt);
                    } else {
                        // ÂáèÊÖ¢Ë£ÖÈ•∞ÁêÉËá™ËΩ¨
                        this.mesh.rotation.y += 0.1 * dt;
                    }
                }

                if (this.type === 'LIGHT' && this.mesh.material && this.mesh.material.emissive) {
                    const intensity = 0.5 + 0.5 * Math.sin(time * this.twinkleSpeed + this.twinklePhase);
                    this.mesh.material.emissiveIntensity = this.emissiveIntensityMax * (0.5 + intensity * 1.5); 
                }
            }
        }

        function createParticles() {
            const sphereGeo = new THREE.SphereGeometry(0.35, 32, 32);
            const crystalGeo = new THREE.OctahedronGeometry(0.3, 0); 
            const lightGeo = new THREE.SphereGeometry(0.18, 16, 16); 

            // --- ÊùêË¥®ÂÖ®Èù¢ÂçáÁ∫ßÔºöÊöñËâ≤Ë∞É & ÊãíÁªùÈªëËâ≤ ---

            // 1. ÁªèÂÖ∏È¶ôÊßüÈáë
            const goldMat = new THREE.MeshPhysicalMaterial({
                color: CONFIG.colors.gold, 
                metalness: 1.0, 
                roughness: 0.2,
                clearcoat: 1.0, 
                emissive: 0x553300, // ÊöñËâ≤Ëá™ÂèëÂÖâÔºåÈò≤Ê≠¢Ê≠ªÈªë
                emissiveIntensity: 0.2
            });

            // 2. ÊöñÁê•ÁèÄ/‰∫ÆÊ©ôËâ≤ (Êõø‰ª£ÂéüÊù•ÁöÑÈªëÁ∫¢)
            const amberMat = new THREE.MeshPhysicalMaterial({
                color: CONFIG.colors.warmGold, 
                metalness: 0.6, roughness: 0.2,
                clearcoat: 1.0,
                emissive: 0xaa4400, // Âº∫ÁÉàÁöÑÊ©ôËâ≤Ëá™ÂèëÂÖâ
                emissiveIntensity: 0.5
            });

            // 3. ÊöñËâ≤Á∫¢ÂÆùÁü≥ (Êõø‰ª£ÂéüÊù•ÁöÑÊöóÁ∫¢)
            const rubyMat = new THREE.MeshPhysicalMaterial({
                color: 0xff3333,
                metalness: 0.4, roughness: 0.1,
                clearcoat: 1.0,
                emissive: 0x880000, // Á∫¢Ëâ≤ËæâÂÖâ
                emissiveIntensity: 0.6
            });

            // 4. Ê∞¥Êô∂ (ÂæÆÊöñ)
            const crystalMat = new THREE.MeshStandardMaterial({
                color: 0xffffee, metalness: 0.9, roughness: 0.0, 
                emissive: 0x332211, emissiveIntensity: 0.3 
            });

            // 5. ÂëºÂê∏ÁÅØ (ÊöñÈªÑ)
            const lightMat = new THREE.MeshStandardMaterial({
                color: CONFIG.colors.warmLight,
                emissive: CONFIG.colors.warmLight,
                emissiveIntensity: 3.0, 
                toneMapped: false 
            });

            for (let i = 0; i < CONFIG.particles.count; i++) {
                const rand = Math.random();
                let mesh, type;

                if (rand < 0.15) {
                    // 15% ÂëºÂê∏ÁÅØ
                    mesh = new THREE.Mesh(lightGeo, lightMat.clone()); 
                    type = 'LIGHT';
                } else if (rand < 0.35) {
                    // 20% Ê∞¥Êô∂
                    mesh = new THREE.Mesh(crystalGeo, crystalMat);
                    mesh.scale.setScalar(0.8 + Math.random() * 0.4);
                    type = 'CRYSTAL';
                } else if (rand < 0.65) {
                    // 30% ÈáëÁêÉ
                    mesh = new THREE.Mesh(sphereGeo, goldMat);
                    mesh.scale.setScalar(0.6 + Math.random() * 0.6);
                    type = 'DECO';
                } else if (rand < 0.85) {
                    // 20% Áê•ÁèÄ (Êõø‰ª£‰πãÂâçÁöÑÊöóËâ≤)
                    mesh = new THREE.Mesh(sphereGeo, amberMat);
                    mesh.scale.setScalar(0.6 + Math.random() * 0.6);
                    type = 'DECO';
                } else {
                    // 15% ‰∫ÆÁ∫¢
                    mesh = new THREE.Mesh(sphereGeo, rubyMat);
                    mesh.scale.setScalar(0.6 + Math.random() * 0.6);
                    type = 'DECO';
                }

                mainGroup.add(mesh);
                particleSystem.push(new Particle(mesh, type));
            }
            
            const starGeo = new THREE.OctahedronGeometry(1.6, 0);
            const starMat = new THREE.MeshBasicMaterial({ color: 0xffffee }); 
            const star = new THREE.Mesh(starGeo, starMat);
            star.position.set(0, CONFIG.particles.treeHeight/2 + 1.2, 0);
            
            const glowGeo = new THREE.OctahedronGeometry(2.2, 0);
            const glowMat = new THREE.MeshBasicMaterial({ 
                color: 0xffaa00, transparent: true, opacity: 0.5, blending: THREE.AdditiveBlending 
            });
            const starGlow = new THREE.Mesh(glowGeo, glowMat);
            star.add(starGlow);

            mainGroup.add(star);
            
            const animateStar = () => {
                const t = Date.now() * 0.001;
                star.rotation.y = t * 0.5;
                // ÂáèÊÖ¢ÊòüÊòüËÑâÂÜ≤ (t*3 -> t*1.5)
                starGlow.scale.setScalar(1 + Math.sin(t * 1.5) * 0.1); 
                requestAnimationFrame(animateStar);
            }
            animateStar();
        }

        function createSnow() {
            const canvas = document.createElement('canvas');
            canvas.width = 64; canvas.height = 64;
            const ctx = canvas.getContext('2d');
            
            const grad = ctx.createRadialGradient(32,32,0, 32,32,32);
            // ÊöñÁôΩËâ≤ÁöÑÈõ™Ëä±
            grad.addColorStop(0, 'rgba(255,245,230,0.8)');
            grad.addColorStop(0.4, 'rgba(255,230,200,0.2)');
            grad.addColorStop(1, 'rgba(255,255,255,0)');
            
            ctx.fillStyle = grad;
            ctx.fillRect(0,0,64,64);
            const texture = new THREE.CanvasTexture(canvas);

            const geo = new THREE.BufferGeometry();
            const pos = [];
            const v = []; 
            for(let i=0; i<800; i++) { 
                pos.push((Math.random()-0.5)*60, (Math.random()-0.5)*60, (Math.random()-0.5)*60);
                v.push((Math.random() * 0.3) + 0.2); 
            }
            geo.setAttribute('position', new THREE.Float32BufferAttribute(pos, 3));

            const mat = new THREE.PointsMaterial({
                map: texture,
                size: 0.8, 
                transparent: true, opacity: 0.6,
                blending: THREE.AdditiveBlending,
                depthWrite: false,
                color: 0xffeedd // ÊöñËâ≤
            });

            const points = new THREE.Points(geo, mat);
            points.userData = { velocities: v };
            snowGroup.add(points);
        }

        function updateSnow() {
            snowGroup.children.forEach(points => {
                const positions = points.geometry.attributes.position.array;
                const velocities = points.userData.velocities;
                for(let i=0; i < positions.length; i+=3) {
                    // ÂáèÊÖ¢Èõ™Ëä±‰∏ãËêΩÈÄüÂ∫¶ (*0.1 -> *0.03)
                    positions[i+1] -= velocities[i/3] * 0.03; 
                    positions[i] += Math.sin(clock.elapsedTime * 0.5 + i) * 0.01; 
                    if(positions[i+1] < -30) positions[i+1] = 30;
                }
                points.geometry.attributes.position.needsUpdate = true;
            });
            snowGroup.rotation.y += 0.001;
        }

        function loadPreloadedPhotos() {
            const loader = new THREE.TextureLoader();
            FRIEND_PHOTOS.forEach(url => {
                loader.load(url, (t) => {
                    t.colorSpace = THREE.SRGBColorSpace;
                    createCard(t, 'PHOTO');
                });
            });
        }

        function loadPoems() {
            POEMS.forEach(poem => {
                const canvas = document.createElement('canvas');
                canvas.width = 512; canvas.height = 600; 
                const ctx = canvas.getContext('2d');
                
                ctx.fillStyle = '#fffdf5'; 
                ctx.fillRect(0,0,512,600);
                
                ctx.strokeStyle = '#eebb66'; 
                ctx.lineWidth = 10;
                ctx.strokeRect(15, 15, 482, 570);
                ctx.lineWidth = 2;
                ctx.strokeRect(25, 25, 462, 550);

                ctx.fillStyle = '#2c1b0e'; 
                ctx.textAlign = 'center';
                
                ctx.font = 'bold 54px "Cinzel", serif';
                ctx.fillText(poem.title, 256, 120);
                
                ctx.beginPath();
                ctx.moveTo(156, 150); ctx.lineTo(356, 150);
                ctx.stroke();

                ctx.font = '32px "Ma Shan Zheng", serif';
                const lines = poem.lines.split('\n');
                let y = 220;
                lines.forEach(line => {
                    ctx.fillText(line, 256, y);
                    y += 60;
                });

                const tex = new THREE.CanvasTexture(canvas);
                tex.colorSpace = THREE.SRGBColorSpace;
                createCard(tex, 'POEM');
            });
        }

        function createTextOverlay() {
            const canvas = document.createElement('canvas');
            canvas.width = 512; canvas.height = 128;
            const ctx = canvas.getContext('2d');
            
            ctx.font = '80px "Great Vibes", cursive';
            ctx.textAlign = 'right';
            ctx.textBaseline = 'bottom';
            
            // ÊöñÈáëËâ≤ÊñáÂ≠ó
            const gradient = ctx.createLinearGradient(0, 0, 512, 0);
            gradient.addColorStop(0, '#ffaa33');
            gradient.addColorStop(0.5, '#ffffdd');
            gradient.addColorStop(1, '#ff8800');
            
            ctx.fillStyle = gradient;
            ctx.shadowColor = 'rgba(0,0,0,0.8)';
            ctx.shadowBlur = 4;
            ctx.shadowOffsetX = 2;
            ctx.shadowOffsetY = 2;
            
            ctx.fillText("Merry Christmas", 500, 110);
            
            const tex = new THREE.CanvasTexture(canvas);
            const mat = new THREE.MeshBasicMaterial({ 
                map: tex, 
                transparent: true, 
                opacity: 1.0,
                side: THREE.DoubleSide
            });
            const geo = new THREE.PlaneGeometry(1.5, 0.375); 
            const mesh = new THREE.Mesh(geo, mat);
            return mesh;
        }

        // ==========================================
        // Ê†∏ÂøÉ‰øÆÊîπÔºöËøòÂéüÂàùÂßã‰ª£Á†ÅÁöÑÁõ∏Ê°ÜÊ†∑Âºè
        // ==========================================
        function createCard(texture, type) {
            // Ë∞ÉÊï¥Â∞∫ÂØ∏‰ª•ÈÄÇÂ∫îÂéüÂßã‰ª£Á†ÅÁöÑÈÄªËæëÔºå‰ΩÜ‰øùÊåÅÈïøÂÆΩÊØî
            const width = 1.3, height = 1.6;
            const group = new THREE.Group();
            
            // 1. ËøòÂéüÈ£éÊ†ºÔºöÂçïÂ±ÇÂéöÈáçÈáëÂ±ûÁõ∏Ê°Ü
            // ÂéüÂßã‰ª£Á†ÅÊòØ BoxGeometry(1.4, 1.4, 0.05) È¢úËâ≤ gold
            // ËøôÈáåÊàë‰ª¨‰øùÊåÅËøô‰∏™ÁÆÄÂçïÁöÑÂá†‰Ωï‰ΩìÁªìÊûÑ
            const frameGeo = new THREE.BoxGeometry(width + 0.2, height + 0.2, 0.06);
            const frameMat = new THREE.MeshStandardMaterial({ 
                color: CONFIG.colors.gold, // Á∫ØÈáëËâ≤
                metalness: 1.0, 
                roughness: 0.15,
                emissive: 0x332200, 
                emissiveIntensity: 0.2
            });
            const frame = new THREE.Mesh(frameGeo, frameMat);
            group.add(frame);
            
            // 2. ÁÖßÁâáÂÜÖÂÆπ (Áõ¥Êé•Ë¥¥Âú®Áõ∏Ê°Ü‰∏ä)
            const contentGeo = new THREE.PlaneGeometry(width, height);
            const contentMat = new THREE.MeshBasicMaterial({ map: texture }); 
            const content = new THREE.Mesh(contentGeo, contentMat);
            content.position.z = 0.035; // Á®çÂæÆÁ™ÅÂá∫
            group.add(content);

            // 3. ‰øùÁïôÊñáÂ≠óË£ÖÈ•∞
            if (type === 'PHOTO') {
                const textMesh = createTextOverlay();
                textMesh.position.set(0.15, -0.7, 0.06); 
                textMesh.rotation.z = 0.05; 
                group.add(textMesh);
            }

            const s = 1.3;
            group.scale.set(s,s,s);
            
            group.userData = { isInteractable: true, type: type };
            
            mainGroup.add(group);
            interactableObjects.push(content); 
            content.userData = { parentGroup: group }; 

            particleSystem.push(new Particle(group, type));
        }

        function setupInteractions() {
            window.addEventListener('resize', onWindowResize, false);
            const c = document.getElementById('canvas-container');
            
            c.addEventListener('touchstart', onTouchStart, {passive: false});
            c.addEventListener('touchmove', onTouchMove, {passive: false});
            c.addEventListener('touchend', onTouchEnd, {passive: false});
            c.addEventListener('mousedown', onMouseDown);
            c.addEventListener('mousemove', onMouseMove);
            c.addEventListener('mouseup', onMouseUp);

            document.getElementById('file-input').addEventListener('change', (e) => {
                if(e.target.files && e.target.files[0]) {
                    const reader = new FileReader();
                    reader.onload = (ev) => {
                        new THREE.TextureLoader().load(ev.target.result, t => {
                            t.colorSpace = THREE.SRGBColorSpace;
                            createCard(t, 'PHOTO');
                            playSoundEffect('sparkle');
                        });
                    }
                    reader.readAsDataURL(e.target.files[0]);
                }
            });

            document.getElementById('view-overlay').addEventListener('click', closeViewMode);
        }

        function onTouchStart(e) { e.preventDefault(); handleStart(e.touches[0].clientX, e.touches[0].clientY); }
        function onMouseDown(e) { handleStart(e.clientX, e.clientY); }
        function handleStart(x, y) {
            STATE.isDragging = true;
            STATE.lastTouch.x = x; STATE.lastTouch.y = y;
            STATE.touchStartTime = Date.now();
        }

        function onTouchMove(e) { e.preventDefault(); handleMove(e.touches[0].clientX, e.touches[0].clientY); }
        function onMouseMove(e) { if(e.buttons === 0) { STATE.isDragging=false; return;} handleMove(e.clientX, e.clientY); }
        function handleMove(x, y) {
            if (!STATE.isDragging || STATE.mode === 'VIEW') return;
            const deltaX = x - STATE.lastTouch.x;
            const deltaY = y - STATE.lastTouch.y;
            STATE.targetRotation.y += deltaX * 0.004;
            STATE.targetRotation.x += deltaY * 0.004;
            STATE.targetRotation.x = Math.max(-0.6, Math.min(0.6, STATE.targetRotation.x));
            STATE.lastTouch.x = x; STATE.lastTouch.y = y;
        }

        function onTouchEnd() { handleEnd(); }
        function onMouseUp() { handleEnd(); }
        function handleEnd() {
            STATE.isDragging = false;
            if (Date.now() - STATE.touchStartTime < 200) checkIntersection();
        }

        function checkIntersection() {
            mouse.x = (STATE.lastTouch.x / window.innerWidth) * 2 - 1;
            mouse.y = -(STATE.lastTouch.y / window.innerHeight) * 2 + 1;
            raycaster.setFromCamera(mouse, camera);
            const intersects = raycaster.intersectObjects(interactableObjects);

            if (intersects.length > 0) {
                const target = intersects[0].object.userData.parentGroup || intersects[0].object;
                if (STATE.mode !== 'VIEW') enterViewMode(target);
            } else {
                if (STATE.mode === 'VIEW') closeViewMode();
                else toggleMode();
            }
        }

        function enterViewMode(target) {
            STATE.mode = 'VIEW';
            STATE.viewTarget = target;
            playSoundEffect('whoosh');
            document.getElementById('view-overlay').classList.add('active');
            document.querySelector('.bottom-controls').style.opacity = '0';
        }

        function closeViewMode() {
            STATE.mode = 'TREE';
            STATE.viewTarget = null;
            document.getElementById('view-overlay').classList.remove('active');
            document.querySelector('.bottom-controls').style.opacity = '1';
        }

        function toggleMode() {
            STATE.mode = (STATE.mode === 'TREE') ? 'SCATTER' : 'TREE';
            playSoundEffect('chime');
        }

        function initAudio() {
            try { audioCtx = new (window.AudioContext || window.webkitAudioContext)(); } catch(e) {}
        }
        function playSoundEffect(type) {
            if (!audioCtx || audioCtx.state === 'suspended') {
                 if(audioCtx) audioCtx.resume();
                 return;
            }
            const osc = audioCtx.createOscillator();
            const gain = audioCtx.createGain();
            osc.connect(gain); gain.connect(audioCtx.destination);
            const t = audioCtx.currentTime;

            if (type === 'chime') {
                osc.type = 'sine';
                osc.frequency.setValueAtTime(600, t);
                osc.frequency.exponentialRampToValueAtTime(1200, t + 0.1);
                gain.gain.setValueAtTime(0.05, t);
                gain.gain.exponentialRampToValueAtTime(0.001, t + 2.0);
                osc.start(t); osc.stop(t + 2.0);
            } else if (type === 'whoosh') {
                osc.frequency.setValueAtTime(200, t);
                osc.frequency.linearRampToValueAtTime(50, t + 0.4);
                gain.gain.setValueAtTime(0.1, t);
                gain.gain.linearRampToValueAtTime(0, t + 0.4);
                osc.start(t); osc.stop(t + 0.4);
            } else if (type === 'sparkle') {
                osc.type = 'triangle';
                osc.frequency.setValueAtTime(1200, t);
                osc.frequency.linearRampToValueAtTime(1800, t + 0.1);
                gain.gain.setValueAtTime(0.05, t);
                gain.gain.linearRampToValueAtTime(0, t + 0.3);
                osc.start(t); osc.stop(t + 0.3);
            }
        }

        function onWindowResize() {
            camera.aspect = window.innerWidth / window.innerHeight;
            camera.updateProjectionMatrix();
            renderer.setSize(window.innerWidth, window.innerHeight);
            composer.setSize(window.innerWidth, window.innerHeight);
        }

        function animate() {
            requestAnimationFrame(animate);
            const dt = clock.getDelta();
            const time = clock.elapsedTime;

            updateSnow();

            if (STATE.mode !== 'VIEW') {
                if (!STATE.isDragging) {
                    STATE.targetRotation.y += 0.08 * dt; 
                    STATE.targetRotation.x = THREE.MathUtils.lerp(STATE.targetRotation.x, 0, dt);
                }
                STATE.rotation.x += (STATE.targetRotation.x - STATE.rotation.x) * 4 * dt;
                STATE.rotation.y += (STATE.targetRotation.y - STATE.rotation.y) * 4 * dt;
                mainGroup.rotation.y = STATE.rotation.y;
                mainGroup.rotation.x = STATE.rotation.x;
            }

            particleSystem.forEach(p => p.update(dt, STATE.mode, STATE.viewTarget, time));

            if (STATE.mode === 'VIEW' && STATE.viewTarget) {
                const targetWorldPos = new THREE.Vector3(0, 0, -9); 
                targetWorldPos.applyMatrix4(camera.matrixWorld);
                const targetLocalPos = targetWorldPos.clone().applyMatrix4(mainGroup.matrixWorld.clone().invert());
                STATE.viewTarget.position.lerp(targetLocalPos, 4 * dt);
                
                const camWorldQuat = new THREE.Quaternion();
                camera.getWorldQuaternion(camWorldQuat);
                const parentWorldQuat = new THREE.Quaternion();
                mainGroup.getWorldQuaternion(parentWorldQuat);
                const parentWorldQuatInv = parentWorldQuat.clone().invert();
                const targetLocalQuat = parentWorldQuatInv.multiply(camWorldQuat);
                STATE.viewTarget.quaternion.slerp(targetLocalQuat, 8 * dt);
                
                const s = 2.2 + Math.sin(time) * 0.02;
                STATE.viewTarget.scale.lerp(new THREE.Vector3(s, s, s), 4 * dt);
            }

            composer.render();
        }

        init();
    </script>
</body>
</html>
